datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
  extensions = [postgis]
}

enum ApprovalStatus {
  UNREVIEWED
  APPROVED
  REJECTED
}

enum UserRole {
  CONSUMER
  ADMIN
  GLOBAL_ADMIN
}

generator client {
  provider = "prisma-client-js"
  output = "./generated"
  previewFeatures = ["postgresqlExtensions"]
  binaryTargets = ["native", "rhel-openssl-3.0.x", "linux-musl-arm64-openssl-3.0.x"]
}

model User {
  id         String @id @default(uuid())
  role       UserRole
  email      String @unique
  firstName  String
  lastName   String
  reviews    Review[]
}

model Review {
  id           String @id @default(uuid())
  user         User @relation(fields: [userId], references: [id])
  userId       String
  curryhouse   Curryhouse @relation(fields: [curryhouseId], references: [id])
  curryhouseId String
  rating       Int
  comment      String
  size         String
  taste        Int
  value        Int
}

model Curryhouse {
  id          String @id @default(uuid())
  title       String
  description String?
  approved    Boolean
  phoneNumber String
  email       String
  websiteUrl  String?
  location    Unsupported("geography(Point, 4326)")
  reviews     Review[]
}